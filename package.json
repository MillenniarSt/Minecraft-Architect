{
  "name": "minecraft-architect",
  "version": "1.0.0",
  "description": "Architect for Minecraft",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "build": "npx tsc && pkg . --targets node18-win-x64 --output build/architect.exe",
    "install": "npm run build && gulp install-project",

    "$install": "npx tsc & gulp install",
    "$ci": "npx tsc & gulp install-src",
    "$i": "gulp install-src",
    "$ir": "gulp install-resources",
    "$im": "gulp install-modules",
    "$uninstall": "gulp uninstall",
    "$compress": "gulp compress"
  },
  "bin": "dist/index.js",
  "pkg": {
    "assets": ["resources/**/*"],
    "targets": ["node18-win-x64"],
    "outputPath": "build"
  },
  "author": "Millenniar",
  "license": "ISC",
  "devDependencies": {
    "@types/adm-zip": "^0.5.7",
    "@types/node": "^22.10.10",
    "@types/pngjs": "^6.0.5",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.5.14",
    "gulp": "^5.0.0",
    "pkg": "^5.8.1",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "adm-zip": "^0.5.16",
    "appdata-path": "^1.0.0",
    "nbt-ts": "^1.3.6",
    "pngjs": "^7.0.0",
    "uuid": "^11.0.5",
    "ws": "^8.18.0"
  }
}
